{% extends 'layout.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="/css/font.css">
    <link rel="stylesheet" type="text/css" href="/css/welcome.css">
{% endblock %}


{% block body %}

    <div id="spinner" class="container">

    </div>

    <div id="welcome" class="container">
        <div>
            <h1>
                <span id="welcome-title" class="h1 header red-text">I am a bot</span>
                <span id="smiley" class="smiley header orange-text"> :)</span>
            </h1>
        </div>

        <div id="google-sign-in-button" class="g-signin2" data-onsuccess="onSignIn" data-onerror="onSingInFail"
             data-theme="dark"></div>

        {% if authenticated == true %}
            <a id="sign-in-button" class="waves-effect waves-light btn red" onclick="join()">Use me</a>
        {% else %}
            <a href="/auth/google" class="btn red"><i class="material-icons left">cloud</i><span class="fa fa-google-plus"></span> Google</a>
        {% endif %}
    </div>

{% endblock %}


{% block post_js %}
    <script type="text/javascript" src="/js/welcome.js"></script>
{% endblock %}
